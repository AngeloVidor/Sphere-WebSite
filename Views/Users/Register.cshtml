@model SphereWebsite.Data.Models.UserModel

@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm" style="background-color: #2c2f33; border: none;">
                <div class="card-header bg-dark text-white text-center">
                    <h3>Register</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Register" method="post" enctype="multipart/form-data" class="needs-validation"
                        novalidate>
                        <div class="mb-3">
                            <label asp-for="NickName" class="form-label text-light"></label>
                            <input asp-for="NickName" class="form-control bg-secondary text-light" required />
                            <span asp-validation-for="NickName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label text-light">Profile Pic</label>
                            <input type="file" class="form-control bg-secondary text-light" asp-for="ProfileImage" required />
                            <span asp-validation-for="ProfileImageUrl" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label text-light"></label>
                            <input asp-for="Name" class="form-control bg-secondary text-light" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LastName" class="form-label text-light"></label>
                            <input asp-for="LastName" class="form-control bg-secondary text-light" required />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label text-light"></label>
                            <input asp-for="Email" class="form-control bg-secondary text-light" type="email" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label text-light"></label>
                            <input asp-for="Password" class="form-control bg-secondary text-light" type="password"
                                required />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-info btn-lg">Register</button>
                        </div>
                    </form>

                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger mt-3">
                            <p>@ViewBag.ErrorMessage</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        background-color: #23272a;
    }

    .btn-info {
        background-color: #7289da;
        border-color: #7289da;
    }

    .btn-info:hover {
        background-color: #5b6eae;
    }

    .text-light {
        color: #ffffff;
    }

    .bg-secondary {
        background-color: #343a40;
    }
</style>
