@model IEnumerable<SphereWebSite.Data.Models.Group.GroupModel>
@{
    ViewData["Title"] = "Groups";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-white">Groups</h2>
        <a class="btn btn-primary" asp-action="Create" asp-controller="Groups">
            <i class="fas fa-plus-circle"></i> Create New Group
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning" role="alert">
            No groups available. Click on "Create New Group" to add your first group.
        </div>
    }
    else
    {
        <table class="table table-dark table-hover">
            <thead>
                <tr>
                    <th scope="col">Group Name</th>
                    <th scope="col">Number of Users</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var group in Model)
                {
                    <tr>
                        <td>@group.Name</td>
                        <td>@group.Users?.Count ?? 0</td>
                        <td>
                            <a asp-action="Details" asp-controller="Groups" asp-route-id="@group.GroupID" class="btn btn-outline-info btn-sm">
                                <i class="fas fa-info-circle"></i> Details
                            </a>
                            <a asp-action="Edit" asp-controller="Groups" asp-route-id="@group.GroupID" class="btn btn-outline-warning btn-sm">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <form asp-action="Delete" asp-controller="Groups" asp-route-id="@group.GroupID" method="post" class="d-inline">
                                <button type="submit" class="btn btn-outline-danger btn-sm">
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
