@model IEnumerable<SphereWebSite.Data.Models.Group.GroupModel>

@{
    ViewData["Title"] = "Groups";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-white">Groups</h2>
        <a class="btn btn-primary" asp-action="Create" asp-controller="Groups">
            <i class="fas fa-plus-circle"></i> Create New Group
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning" role="alert">
            No groups available. Click on "Create New Group" to add your first group.
        </div>
    }
    else
    {
        @foreach (var group in Model)
        {
            <div class="card bg-dark text-white mb-4">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="@group.GroupImageUrl" class="card-img" alt="@group.Name" style="height: 200px; object-fit: cover;" />
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">@group.Name</h5>
                            <p class="card-text">@group.Description</p>
                            <p class="card-text"><small>@group.Users?.Count ?? 0 users</small></p>
                            <div class="d-flex justify-content-between">
                                <div>
                                    <a asp-action="Details" asp-controller="Groups" asp-route-id="@group.GroupID" class="btn btn-outline-info btn-sm">
                                        <i class="fas fa-info-circle"></i> Details
                                    </a>
                                    <a asp-action="Edit" asp-controller="Groups" asp-route-id="@group.GroupID" class="btn btn-outline-warning btn-sm">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <form asp-action="JoinGroup" asp-controller="Groups" asp-route-groupId="@group.GroupID" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-outline-success btn-sm">
                                            <i class="fas fa-user-plus"></i> Join
                                        </button>
                                    </form>
                                </div>
                                <form asp-action="JoinGroup" asp-controller="Groups" asp-route-id="@group.GroupID" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-outline-danger btn-sm">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>
