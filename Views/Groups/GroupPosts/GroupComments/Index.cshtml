@model List<SphereWebsite.Data.Models.CommentsModel>

@{
    ViewBag.Title = "Comentários";
}

<h2>Comentários</h2>

<table class="table">
    <thead>
        <tr>
            <th>Conteúdo</th>
            <th>Data de Criação</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var comment in Model)
        {
            <tr>
                <td>@comment.Content</td>
                <td>@comment.CreatedAt.ToString("g")</td>
                <td>
                    <a asp-action="Edit" asp-controller="GroupComments" asp-route-id="@comment.CommentID" class="btn btn-warning">Editar</a>
                    <form asp-action="Delete" asp-controller="GroupComments" asp-route-id="@comment.CommentID" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Excluir</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" asp-controller="GroupComments" class="btn btn-primary">Adicionar Novo Comentário</a>
<a asp-action="Details" asp-controller="GroupPosts" asp-route-id="@ViewBag.GroupPostId" class="btn btn-secondary">Voltar para o Post</a>
