@model SphereWebSite.Data.Models.Group.GroupModel

@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-5">
    <p class="text-white">@Model.Description</p>
    <p class="text-white"><strong>@Model.UserCount users</strong></p>

    <a asp-action="Create" asp-controller="GroupPosts" asp-route-groupId="@Model.GroupID" class="btn btn-primary mb-4">
        <i class="fas fa-plus-circle"></i> Create New Post
    </a>

    <h3 class="text-white">Posts</h3>
    @if (Model.Posts != null && Model.Posts.Any())
    {
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th>Título</th>
                    <th>Descrição</th>
                    <th>Usuário</th>
                    <th>Data de Criação</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var post in Model.Posts)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => post.Title)</td>
                        <td>@Html.DisplayFor(m => post.Description)</td>
                        <td>@Html.DisplayFor(m => post.User.Name)</td> 
                        <td>@post.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            <a asp-action="Details" asp-controller="GroupPosts" asp-route-id="@post.GroupPostID"
                                class="btn btn-outline-info btn-sm">
                                <i class="fas fa-info-circle"></i> View
                            </a>
                            <a asp-action="Edit" asp-controller="GroupPosts" asp-route-id="@post.GroupPostID"
                                class="btn btn-outline-warning btn-sm">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <form asp-action="Delete" asp-controller="GroupPosts" asp-route-id="@post.GroupPostID" method="post"
                                class="d-inline">
                                <button type="submit" class="btn btn-outline-danger btn-sm">
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            No posts available for this group. Click on "Create New Post" to add your first post.
        </div>
    }
</div>
