@model SphereWebSite.Data.Models.Group.GroupModel

@{
    ViewData["Title"] = Model.Name;
}

<h2 class="my-4 text-center text-light">Posts do Grupo @Model.Name</h2>

<div class="text-end mb-4">
    <a asp-action="Create" asp-controller="GroupPosts" asp-route-groupId="@Model.GroupID" class="btn btn-lg btn-gradient rounded-pill shadow" title="Create New Post">
        <i class="fas fa-plus"></i> Criar Novo Post
    </a>
</div>

<div class="container">
    @if (Model.Posts != null && Model.Posts.Any())
    {
        @foreach (var post in Model.Posts)
        {
            <div class="mb-4">
                <div class="card shadow-lg border-0 rounded" style="background-color: #2c2f33;">
                    <div class="card-body">
                        <h5 class="card-title text-light">@Html.DisplayFor(m => post.Title)</h5>
                        <p class="card-text text-muted" style="max-height: 100px; overflow: hidden;">
                            @Html.DisplayFor(m => post.Description)
                        </p>
                        <p class="text-light mb-0"><strong>Postado por:</strong> @post.User.Name</p>
                        <p class="text-muted">@post.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>

                        @if (!string.IsNullOrEmpty(post.ImageUrl))
                        {
                            <img src="@post.ImageUrl" alt="@post.Title" class="img-fluid rounded" style="max-height: 200px; width: auto;"
                                 data-bs-toggle="modal" data-bs-target="#imageModal" 
                                 onclick="showImageModal('@post.ImageUrl')" />
                        }
                    </div>
                    <div class="card-footer bg-dark d-flex justify-content-between align-items-center">
                        <a asp-action="Details" asp-controller="GroupPosts" asp-route-id="@post.GroupPostID"
                           class="btn btn-secondary btn-sm rounded-pill shadow" title="View Comments">
                            <i class="fas fa-comments"></i> Comentários
                        </a>

                        <a asp-action="Edit" asp-controller="GroupPosts" asp-route-id="@post.GroupPostID"
                           class="btn btn-warning btn-sm rounded-pill shadow" title="Edit Post">
                            <i class="fas fa-edit"></i> Editar
                        </a>

                        <form asp-action="Delete" asp-controller="GroupPosts" asp-route-id="@post.GroupPostID" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm rounded-pill shadow" title="Delete Post"
                                onclick="return confirm('Você tem certeza que deseja excluir este post?');">
                                <i class="fas fa-trash"></i> Excluir
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            Não há posts disponíveis para este grupo. Clique em "Criar Novo Post" para adicionar seu primeiro post.
        </div>
    }
</div>

<div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="imageModalLabel">Preview</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <img id="modalImage" src="" alt="Preview" class="img-fluid" />
            </div>
        </div>
    </div>
</div>

<script>
    function showImageModal(imageUrl) {
        var modalImage = document.getElementById('modalImage');
        modalImage.src = imageUrl;
    }
</script>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>

<style>
    .btn-gradient {
        background: linear-gradient(135deg, #6a11cb, #2575fc);
        color: #fff;
        border: none;
        transition: all 0.3s ease;
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
    }

    .btn-gradient:hover {
        background: linear-gradient(135deg, #5c0f9f, #1d63e0);
        transform: scale(1.05);
    }

    .btn {
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

    .btn:hover {
        transform: scale(1.05);
    }
</style>
