@model SphereWebSite.Data.Models.Group.GroupModel

@{
    ViewData["Title"] = Model.Name;
}

<h2 class="my-4 text-center text-light">Posts in Group @Model.Name</h2>

<div class="text-end mb-4">
    <a asp-action="Create" asp-controller="GroupPosts" asp-route-groupId="@Model.GroupID"
        class="btn btn-lg btn-gradient rounded-pill shadow" title="Create New Post">
        <i class="fas fa-plus"></i> Create New Post
    </a>
</div>

<div class="container">
    @if (Model.Posts != null && Model.Posts.Any())
    {
        @foreach (var post in Model.Posts)
        {
            <div class="mb-4">
                <div class="card shadow-lg border-0 rounded" style="background-color: #2c2f33;">
                    <div class="card-body position-relative">
                        <div class="dropdown position-absolute top-0 end-0">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-ellipsis-v"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton">
                                <li>
                                    <a class="dropdown-item" asp-action="Edit" asp-controller="GroupPosts"
                                        asp-route-id="@post.GroupPostID" title="Edit Post">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                </li>
                                <li>
                                    <form asp-action="Delete" asp-controller="GroupPosts" asp-route-id="@post.GroupPostID"
                                        method="post" class="d-inline">
                                        <button type="submit" class="dropdown-item text-danger" title="Delete Post"
                                            onclick="return confirm('Are you sure you want to delete this post?');">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>

                        <h5 class="card-title text-light">@post.Title</h5>
                        <p class="card-text text-muted" style="max-height: 100px; overflow: hidden;">
                            @post.Description
                        </p>

                        <div class="d-flex align-items-center mb-2">
                            @if (!string.IsNullOrEmpty(post.User.ProfileImageUrl))
                            {
                                <img src="@post.User.ProfileImageUrl" alt="Profile Image" class="img-fluid rounded-circle me-2"
                                    style="width: 40px; height: 40px;" />
                            }
                            <p class="text-light mb-0"><strong>Posted by:</strong> @post.User.Name</p>
                        </div>

                        <p class="text-muted">@post.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>

                        @if (!string.IsNullOrEmpty(post.ImageUrl))
                        {
                            <img src="@post.ImageUrl" alt="@post.Title" class="img-fluid rounded"
                                style="max-height: 200px; width: auto;" data-bs-toggle="modal" data-bs-target="#imageModal"
                                onclick="showImageModal('@post.ImageUrl')" />
                        }

                        <div class="d-flex justify-content-between align-items-center mt-2">
                            <div class="d-flex align-items-center">
                                <form method="post" asp-action="Upvote" asp-route-postId="@post.GroupPostID" class="me-2">
                                    <button type="submit" class="btn btn-sm btn-outline-success" title="Upvote">
                                        <i class="fas fa-thumbs-up"></i> <!-- Ícone de Upvote -->
                                    </button>
                                </form>
                                <span class="text-light me-3">@post.Upvotes</span>

                                <form method="post" asp-action="Downvote" asp-route-postId="@post.GroupPostID">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Downvote">
                                        <i class="fas fa-thumbs-down"></i> <!-- Ícone de Downvote -->
                                    </button>
                                </form>
                                <span class="text-light">@post.Downvotes</span>
                            </div>

                            <a asp-action="Comments" asp-controller="GroupFeedComments" asp-route-groupPostId="@post.GroupPostID"
                                class="btn btn-secondary btn-sm rounded-pill shadow" title="View Comments">
                                <i class="fas fa-comments"></i> Comments
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            No posts available for this group. Click "Create New Post" to add your first post.
        </div>
    }
</div>

<div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="imageModalLabel">Preview</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <img id="modalImage" src="" alt="Preview" class="img-fluid" />
            </div>
        </div>
    </div>
</div>

<script>
    function showImageModal(imageUrl) {
        var modalImage = document.getElementById('modalImage');
        modalImage.src = imageUrl;
    }
</script>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>

<style>
    .btn-gradient {
        background: linear-gradient(135deg, #6a11cb, #2575fc);
        color: #fff;
        border: none;
        transition: all 0.3s ease;
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
    }

    .btn-gradient:hover {
        background: linear-gradient(135deg, #5c0f9f, #1d63e0);
        transform: scale(1.05);
    }

    .btn {
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

    .btn:hover {
        transform: scale(1.05);
    }
</style>
