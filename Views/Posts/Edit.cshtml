@model SphereWebsite.Data.Models.PostsModel

<h2 class="text-center my-4 text-light">Edit Post</h2>

<div class="container">
    <form asp-action="Edit" method="post" class="shadow-lg p-4 bg-dark rounded">
        <input type="hidden" asp-for="PostID" />

        <div class="mb-3">
            <label asp-for="Title" class="form-label text-light"></label>
            <input asp-for="Title" class="form-control" placeholder="Enter post title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label text-light"></label>
            <textarea asp-for="Description" class="form-control" rows="5" placeholder="Enter post description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary rounded-pill shadow">Save</button>
        <a asp-action="Index" class="btn btn-link text-light ms-2">Back to List</a>
    </form>
</div>

<style>
    body {
        background-color: #23272a; 
    }
    .form-control {
        background-color: #2c2f33; 
        color: #ffffff; 
        border: 1px solid #7289da; 
    }
    .form-control:focus {
        border-color: #4a90e2; 
        box-shadow: 0 0 5px rgba(74, 144, 226, 0.5); 
    }
    .text-danger {
        font-size: 0.875em; 
    }
</style>
