@using System.Security.Claims
@model IEnumerable<SphereWebsite.Data.Models.PostsModel>

<h2 class="my-4 text-center text-light">Feed</h2>

<div class="text-end mb-4">
    <a asp-action="Create" class="btn btn-lg btn-primary rounded-pill shadow" title="Create New Post">
        <i class="fas fa-plus"></i> New Post
    </a>
</div>

<div class="container">
    @foreach (var post in Model)
    {
        <div class="mb-4">
            <div class="card shadow-lg border-0 rounded" style="background-color: #2c2f33;">
                <div class="card-body">
                    <h5 class="card-title text-light">@post.Title</h5>
                    <p class="card-text text-muted" style="max-height: 100px; overflow: hidden;">@post.Description</p>
                </div>
                <div class="card-footer bg-dark d-flex justify-content-between align-items-center">
                    <a asp-action="Comments" asp-route-id="@post.PostID" class="btn btn-secondary btn-sm rounded-pill shadow" title="View Comments">
                        <i class="fas fa-comments"></i> Comments
                    </a>
                    <div class="d-flex">
                        <a asp-action="Details" asp-route-id="@post.PostID" class="btn btn-info btn-sm rounded-pill shadow me-2" title="View Details">
                            <i class="fas fa-eye"></i> Details
                        </a>
                        @if (User.Identity.IsAuthenticated && User.FindFirstValue(ClaimTypes.NameIdentifier) == post.UserId.ToString())
                        {
                            <a asp-action="Edit" asp-route-id="@post.PostID" class="btn btn-warning btn-sm rounded-pill shadow me-2" title="Edit Post">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@post.PostID" class="btn btn-danger btn-sm rounded-pill shadow" title="Delete Post" onclick="return confirm('Are you sure you want to delete this post?');">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<a asp-action="Index" class="btn btn-link text-light">Back to Home</a>

<style>
    body {
        background-color: #23272a; 
    }
    .btn-primary {
        background-color: #4a90e2;
        border-color: #4a90e2;
        transition: background-color 0.3s, transform 0.3s;
    }
    .btn-primary:hover {
        background-color: #3f80c6; 
        transform: translateY(-2px);
    }
    .btn-info {
        background-color: #7289da;
        border-color: #7289da;
        transition: background-color 0.3s, transform 0.3s;
    }
    .btn-info:hover {
        background-color: #5b6eae; 
        transform: translateY(-2px);
    }
    .btn-secondary {
        background-color: #99aab5;
        border-color: #99aab5;
        transition: background-color 0.3s, transform 0.3s;
    }
    .btn-secondary:hover {
        background-color: #7b8b92; 
        transform: translateY(-2px);
    }
    .btn-warning {
        background-color: #f39c12;
        border-color: #e67e22;
        transition: background-color 0.3s, transform 0.3s;
    }
    .btn-warning:hover {
        background-color: #d68f12; 
        transform: translateY(-2px);
    }
    .btn-danger {
        background-color: #e74c3c; 
        border-color: #c0392b;
        transition: background-color 0.3s, transform 0.3s;
    }
    .btn-danger:hover {
        background-color: #c0392b; 
        transform: translateY(-2px);
    }
    .text-light {
        color: #ffffff; 
    }
    .text-muted {
        color: #b9bbbe; 
    }
    .card {
        transition: transform 0.3s, box-shadow 0.3s;
    }
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
    }
</style>
