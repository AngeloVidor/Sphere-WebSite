@using System.Security.Claims
@model IEnumerable<SphereWebsite.Data.Models.PostsModel>

<h2 class="my-4 text-center text-primary">Posts</h2>

<div class="text-end mb-4">
    <a asp-action="Create" class="btn btn-success btn-lg">
        <i class="fas fa-plus"></i> Create New Post
    </a>
</div>

<div class="container">
    @foreach (var post in Model)
    {
        <div class="card mb-4 shadow-lg border-0 rounded">
            <div class="card-body">
                <h5 class="card-title text-dark">@post.Title</h5>
                <p class="card-text text-muted" style="max-height: 100px;">@post.Description</p>
            </div>
            <div class="card-footer bg-light text-end">
                <a asp-action="Details" asp-route-id="@post.PostID" class="btn btn-info btn-sm me-2" title="View Details">
                    <i class="fas fa-eye"></i> Details
                </a>

                @if (User.Identity.IsAuthenticated && User.FindFirstValue(ClaimTypes.NameIdentifier) == post.UserId.ToString())
                {
                    <a asp-action="Edit" asp-route-id="@post.PostID" class="btn btn-warning btn-sm me-2" title="Edit Post">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@post.PostID" class="btn btn-danger btn-sm" title="Delete Post" onclick="return confirm('Are you sure you want to delete this post?');">
                        <i class="fas fa-trash"></i> Delete
                    </a>
                }
            </div>
        </div>
    }
</div>

<a asp-action="Index" class="btn btn-link text-primary">Back to Home</a>
