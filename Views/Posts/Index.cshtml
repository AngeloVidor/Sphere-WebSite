@using System.Security.Claims
@model IEnumerable<SphereWebsite.Data.Models.PostsModel>

<h2 class="my-4 text-center text-light">Feed</h2>

<div class="text-end mb-4">
    <a asp-action="Create" class="btn btn-lg btn-primary rounded-pill shadow" title="Create New Post">
        <i class="fas fa-plus"></i> New Post
    </a>
</div>

<div class="container">
    @foreach (var post in Model)
    {
        <div class="mb-4">
            <div class="card shadow-lg border-0 rounded" style="background-color: #2c2f33;">
                <div class="card-body">
                    @if (post.User != null)
                    {
                        <p class="text-light"><strong>Posted by:</strong> @post.User.NickName</p>
                    }
                    <h5 class="card-title text-light">@post.Title</h5>
                    <p class="card-text text-muted" style="max-height: 100px; overflow: hidden;">@post.Description</p>

                    @if (!string.IsNullOrEmpty(post.ImageUrl)) // Verifica se a URL da imagem não é nula ou vazia
                    {
                        <img src="@post.ImageUrl" alt="@post.Title" class="img-fluid rounded" style="max-height: 200px; width: auto;" />
                    }
                </div>
                <div class="card-footer bg-dark d-flex justify-content-between align-items-center">
                    <a asp-action="Details" asp-controller="Posts" asp-route-id="@post.PostID"
                        class="btn btn-secondary btn-sm rounded-pill shadow" title="View Comments">
                        <i class="fas fa-comments"></i> Comments
                    </a>

                    <div class="d-flex">
                        <a asp-action="Details" asp-route-id="@post.PostID"
                            class="btn btn-info btn-sm rounded-pill shadow me-2" title="View Details">
                            <i class="fas fa-eye"></i> See More!
                        </a>
                        @if (User.Identity.IsAuthenticated && User.FindFirstValue(ClaimTypes.NameIdentifier) ==
                        post.UserId.ToString())
                        {
                            <a asp-action="Edit" asp-route-id="@post.PostID"
                                class="btn btn-warning btn-sm rounded-pill shadow me-2" title="Edit Post">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@post.PostID" class="btn btn-danger btn-sm rounded-pill shadow"
                                title="Delete Post" onclick="return confirm('Are you sure you want to delete this post?');">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<a asp-action="Index" class="btn btn-link text-light">Back to Home</a>
