@using System.Security.Claims

<h2 class="my-4 text-center text-light">Feed</h2>

<div class="text-end mb-4">
    <a asp-action="Create" class="btn btn-lg btn-gradient rounded-pill shadow" title="Create New Post">
        <i class="fas fa-plus"></i> New Post
    </a>
</div>

<div class="container">
    @foreach (var postWithUser in Model)
    {
        var post = postWithUser.Post;
        var user = postWithUser.User;

        <div class="mb-4">
            <div class="card shadow-lg border-0 rounded" style="background-color: #2c2f33;">
                <div class="card-body">
                    @if (user != null)
                    {
                        <div class="d-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center">
                                @if (!string.IsNullOrEmpty(user.ProfileImageUrl))
                                {
                                    <img src="@user.ProfileImageUrl" alt="@user.NickName" class="rounded-circle" style="width: 40px; height: 40px; margin-right: 10px;" />
                                }
                                <p class="text-light mb-0"><strong>Posted by:</strong> @user.NickName</p>
                            </div>
                            @if (User.Identity.IsAuthenticated && User.FindFirstValue(ClaimTypes.NameIdentifier) == post.UserId.ToString())
                            {
                                <div class="dropdown">
                                    <button class="btn btn-light btn-sm dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-ellipsis-h"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton">
                                        <li>
                                            <a asp-action="Edit" asp-route-id="@post.PostID" class="dropdown-item" title="Edit Post">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                        </li>
                                        <li>
                                            <a asp-action="Delete" asp-route-id="@post.PostID" class="dropdown-item text-danger"
                                               title="Delete Post" onclick="return confirm('Are you sure you want to delete this post?');">
                                               <i class="fas fa-trash"></i> Delete
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            }
                        </div>
                    }
                    <h5 class="card-title text-light">@post.Title</h5>
                    <p class="card-text text-muted" style="max-height: 100px; overflow: hidden;">@post.Description</p>

                    @if (!string.IsNullOrEmpty(post.ImageUrl))
                    {
                        <img src="@post.ImageUrl" alt="@post.Title" class="img-fluid rounded" style="max-height: 200px; width: auto;"
                             data-bs-toggle="modal" data-bs-target="#imageModal" 
                             onclick="showImageModal('@post.ImageUrl')" />
                    }

                    @if (post.SelectedTags != null && post.SelectedTags.Count > 0)
                    {
                        <div class="mt-3">
                            <strong class="text-light">Tags:</strong>
                            <div class="d-flex flex-wrap gap-2 mt-2">
                                @{
                                    var tagColors = new Dictionary<string, string>
                                    {
                                        { "technology", "#6a11cb" },
                                        { "art", "#f39c12" },
                                        { "life", "#e74c3c" },
                                        { "music", "#3498db" },
                                        { "fun", "#2ecc71" },
                                        { "memes", "#e91e63" }
                                    };
                                }

                                @foreach (var tag in post.SelectedTags)
                                {
                                    var color = tagColors.ContainsKey(tag.ToLower()) ? tagColors[tag.ToLower()] : "#ffffff";
                                    <span class="badge" style="background-color: @color; color: #fff; padding: 0.5rem 1rem; border-radius: 15px; font-weight: bold;">
                                        @tag.Substring(0, 1).ToUpper()@tag.Substring(1)
                                    </span>
                                }
                            </div>
                        </div>
                    }
                </div>
                <div class="card-footer bg-dark d-flex justify-content-between align-items-center">
                    <a asp-action="Details" asp-controller="Posts" asp-route-id="@post.PostID"
                        class="btn btn-secondary btn-sm rounded-pill shadow" title="View Comments">
                        <i class="fas fa-comments"></i> Comments
                    </a>

                    <a asp-action="Details" asp-route-id="@post.PostID"
                        class="btn btn-info btn-sm rounded-pill shadow me-2" title="View Details">
                        <i class="fas fa-eye"></i> See More!
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<a asp-action="Index" class="btn btn-link text-light btn-lg">Back to Home</a>

<div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="imageModalLabel">Image Preview</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <img id="modalImage" src="" alt="Preview" class="img-fluid" />
            </div>
        </div>
    </div>
</div>

<script>
    function showImageModal(imageUrl) {
        var modalImage = document.getElementById('modalImage');
        modalImage.src = imageUrl;
    }
</script>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>

<style>
    .btn-gradient {
        background: linear-gradient(135deg, #6a11cb, #2575fc);
        color: #fff;
        border: none;
        transition: all 0.3s ease;
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
    }

    .btn-gradient:hover {
        background: linear-gradient(135deg, #5c0f9f, #1d63e0);
        transform: scale(1.05);
    }

    .btn-link {
        color: #6a11cb;
        text-decoration: none;
        transition: color 0.3s ease;
        font-size: 1.1rem;
        font-weight: bold;
    }

    .btn-link:hover {
        color: #2575fc;
    }

    .btn {
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

    .btn:hover {
        transform: scale(1.05);
    }
</style>