@model SphereWebsite.Data.Models.PostsModel

<h2 class="my-4 text-center text-primary">Create Post</h2>

<form asp-action="Create" method="post" class="bg-light p-4 rounded shadow-sm">
    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" placeholder="Enter the title here" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="5" placeholder="Write your post description here..."></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

<div class="mt-3 text-center">
    <a asp-action="Index" class="btn btn-link text-primary">Back to List</a>
</div>
