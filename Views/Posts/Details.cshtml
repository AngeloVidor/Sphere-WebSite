<div class="post-details">
    <h1 class="post-title">@Model.Post.Title</h1>
    <p class="post-description">@Model.Post.Description</p>

    <div class="post-meta">
        <small>Publicado por <strong>@Model.Post.User.NickName</strong> em @Model.Post.CreatedAt.ToString("dd/MM/yyyy")</small>
    </div>

    <hr class="divider" />

    <h3 class="comments-title">Comentários</h3>
    <ul id="comments-list" class="comments-list">
        @foreach (var comment in Model.Comments)
        {
            <li class="comment">
                <p>@comment.Content</p>
                <small class="comment-meta">Comentado por <strong>@comment.User.NickName</strong> em @comment.CreatedAt.ToString("dd/MM/yyyy")</small>
            </li>
        }
    </ul>

    <hr class="divider" />

    <h4 class="add-comment-title">Adicionar Comentário</h4>
    <form id="commentForm" class="comment-form">
        <div class="form-group">
            <label for="content">Comentário:</label>
            <textarea id="content" name="content" class="form-control" rows="3" placeholder="Escreva seu comentário aqui..."></textarea>
        </div>
        <input type="hidden" id="postId" value="@Model.Post.PostID" />
        <button type="submit" class="btn btn-primary">Enviar</button>
    </form>

    <div id="commentSuccessMessage" class="success-message" style="display:none;">Comentário adicionado com sucesso!</div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function() {
        $('#commentForm').submit(function(event) {
            event.preventDefault(); 

            var postId = $('#postId').val();
            var content = $('#content').val();

            $.ajax({
                url: '/Comments/AddComment', 
                type: 'POST',
                data: { postId: postId, content: content },
                success: function(response) {
                    $('#comments-list').append('<li class="comment"><p>' + content + '</p><small class="comment-meta">Comentado por você agora</small></li>');
                    $('#content').val(''); 
                    $('#commentSuccessMessage').show().delay(2000).fadeOut();
                },
                error: function() {
                    alert('Erro ao adicionar comentário. Tente novamente.');
                }
            });
        });
    });
</script>

<style>
