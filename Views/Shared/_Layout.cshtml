<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SphereWebsite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SphereWebsite.styles.css" asp-append-version="true" />
    <style>
        body {
            background-color: #23272a;
            color: #ffffff;
        }

        header {
            background-color: #2c2f33;
            border-bottom: 2px solid #7289da;
        }

        .navbar-light .navbar-nav .nav-link {
            color: #ffffff;
        }

        .navbar-light .navbar-nav .nav-link:hover {
            color: #7289da;
        }

        .navbar-light .navbar-nav .nav-link.active {
            color: #ffffff;
        }

        .navbar-light .navbar-brand {
            color: #ffffff;
        }

        .btn-outline-primary {
            border-color: #7289da;
            color: #7289da;
        }

        .btn-outline-primary:hover {
            background-color: #7289da;
            color: #ffffff;
        }

        .dropdown-menu {
            background-color: #2c2f33;
        }

        .dropdown-item {
            color: #ffffff;
        }

        .dropdown-item:hover {
            background-color: #7289da;
        }

        .footer {
            background-color: #2c2f33;
            color: #b9bbbe;
        }

        .footer a {
            color: #7289da;
        }

        .footer a:hover {
            color: #ffffff;
        }

        .sidebar {
            background-color: #2c2f33;
            padding: 20px;
            height: 100vh;
        }

        .sidebar a {
            color: #ffffff;
            text-decoration: none;
            display: block;
            padding: 10px 0;
        }

        .sidebar a:hover {
            background-color: #7289da;
        }

        .search-form {
            flex: 1;
            max-width: 500px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .search-input {
            border-radius: 25px;
            border: 2px solid #7289da;
            background-color: #2c2f33;
            color: #ffffff;
            padding: 0.5rem 1.5rem;
            width: 100%;
            transition: all 0.3s ease-in-out;
        }

        .search-input:focus {
            border-color: #ffffff;
            outline: none;
            box-shadow: 0 0 10px rgba(114, 137, 218, 0.8);
        }

        .search-btn {
            border-radius: 25px;
            border: 2px solid #7289da;
            color: #ffffff;
            background-color: #7289da;
            padding: 0.5rem 1.5rem;
            transition: all 0.3s ease-in-out;
        }

        .search-btn:hover {
            background-color: #ffffff;
            color: #7289da;
        }

        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light shadow-sm py-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                    aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-area="" asp-controller="Posts"
                                asp-action="Index">Sphere</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Groups" asp-action="Index">Groups</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>

                    <form class="d-flex mx-auto search-form">
                        <input class="form-control me-2 search-input" type="search" placeholder="Search"
                            aria-label="Search">
                        <button class="btn btn-outline-primary search-btn" type="submit">Search</button>
                    </form>

                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown"
                                    role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    @if (ViewData["ProfileImageUrl"] != null &&
                                   !string.IsNullOrEmpty(ViewData["ProfileImageUrl"].ToString()))
                                    {
                                        <img src="@ViewData["ProfileImageUrl"]" alt="Profile Image" class="rounded-circle"
                                            style="width: 40px; height: 40px; object-fit: cover; margin-right: 10px;" />
                                    }
                                    else
                                    {
                                        <i class="fas fa-user-circle" style="font-size: 24px; margin-right: 10px;"></i>
                                    }
                                    <span>@User.Identity.Name</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Users"
                                            asp-action="Profile">Profile</a></li>
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Users"
                                            asp-action="Logout">Logout</a></li>
                                    <li>
                                        <form asp-area="" asp-controller="Users" asp-action="Logout" method="post"
                                            class="dropdown-item">
                                            <button type="submit" class="btn btn-link text-light">Logout</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-primary ms-2" asp-area="" asp-controller="Posts"
                                    asp-action="Create">
                                    <i class="fas fa-plus-circle"></i> New Post
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Users" asp-action="Register">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Users" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <div class="row">
            <aside class="col-md-2 sidebar">
                <h4>Menu</h4>
                <a asp-area="" asp-controller="Groups" asp-action="Index">Groups</a>
                <a asp-area="" asp-controller="Posts" asp-action="Index">Feed</a>
                <a asp-area="" asp-controller="Users" asp-action="Profile">Profile</a>
            </aside>

            <div class="col-md-9">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted py-3">
        <div class="container text-center">
            &copy; 2024 - SphereWebsite - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
